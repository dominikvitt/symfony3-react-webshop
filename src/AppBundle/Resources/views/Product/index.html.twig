{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products list</h1>

    <table>
        <thead>
            <tr>
                <th>Productid</th>
                <th>Model</th>
                <th>Sku</th>
                <th>Quantity</th>
                <th>Stockstatusid</th>
                <th>Image</th>
                <th>Manufacturerid</th>
                <th>Shipping</th>
                <th>Price</th>
                <th>Taxclassid</th>
                <th>Dateavailable</th>
                <th>Minimum</th>
                <th>Sortorder</th>
                <th>Status</th>
                <th>Viewed</th>
                <th>Dateadded</th>
                <th>Datemodified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'productId': product.productId }) }}">{{ product.productId }}</a></td>
                <td>{{ product.model }}</td>
                <td>{{ product.sku }}</td>
                <td>{{ product.quantity }}</td>
                <td>{{ product.stockStatusId }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.manufacturerId }}</td>
                <td>{% if product.shipping %}Yes{% else %}No{% endif %}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.taxClassId }}</td>
                <td>{% if product.dateAvailable %}{{ product.dateAvailable|date('Y-m-d') }}{% endif %}</td>
                <td>{{ product.minimum }}</td>
                <td>{{ product.sortOrder }}</td>
                <td>{% if product.status %}Yes{% else %}No{% endif %}</td>
                <td>{{ product.viewed }}</td>
                <td>{% if product.dateAdded %}{{ product.dateAdded|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if product.dateModified %}{{ product.dateModified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'productId': product.productId }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'productId': product.productId }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
    </ul>
{% endblock %}
